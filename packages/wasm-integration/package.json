{
  "name": "@swarm-flow/wasm-integration",
  "version": "1.0.0",
  "description": "WASM-native package for universal portability and high-performance coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:wasm",
    "build:wasm": "wasm-pack build --target nodejs --out-dir pkg/nodejs && wasm-pack build --target web --out-dir pkg/web",
    "test": "jest && npm run test:wasm",
    "test:wasm": "cargo test",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts && cargo clippy",
    "format": "prettier --write src/**/*.ts && cargo fmt"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "coordination",
    "portability",
    "performance",
    "universal"
  ],
  "author": "Swarm Flow Team",
  "license": "MIT",
  "dependencies": {
    "wasm-bindgen": "^0.2.0",
    "js-sys": "^0.3.0",
    "web-sys": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "uuid": "^9.0.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "wasm-pack": "^0.12.0"
  },
  "files": [
    "dist/",
    "pkg/",
    "src/",
    "Cargo.toml"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": {
      "import": "./pkg/nodejs/wasm_swarm_coordinator.js",
      "require": "./pkg/nodejs/wasm_swarm_coordinator.js"
    }
  }
}